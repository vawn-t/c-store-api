{
  "name": "c-store-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npx tsc --watch\" \"npx tsc-alias --watch\" \"npx pm2-dev dist/server.js\"",
    "start": "node dist/server.js",
    "db:dev:migrate": "npx prisma migrate dev --name init",
    "db:production:push": "npx prisma db push",
    "db:production:migrate": "npx prisma migrate deploy",
    "_build": "NODE_ENV=production npx tsc && npx tsc-alias",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker compose down",
    "docker:prune": "docker system prune -a"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.5.0",
    "express": "~4.18.2",
    "express-validator": "^6.15.0",
    "http-status-codes": "^2.2.0",
    "jade": "~1.11.0",
    "jwt-simple": "^0.5.6",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
