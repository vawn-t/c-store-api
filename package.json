{
  "name": "c-store-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"npx tsc --watch\" \"npx tsc-alias --watch\" \"npx pm2-dev dist/server.js\"",
    "start": "node dist/server.js",
    "docker:up": "docker compose up -d cstore-dev-db cstore-api",
    "docker:down": "docker compose down",
    "db:dev:migrate": "npx prisma migrate dev --name init",
    "db:production:push": "npx prisma db push",
    "db:production:migrate": "npx prisma migrate deploy",
    "build": "NODE_ENV=production npx tsc-alias"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.5.0",
    "express": "~4.18.2",
    "express-validator": "^6.15.0",
    "jwt-simple": "^0.5.6",
    "http-status-codes": "^2.2.0",
    "jade": "~1.11.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "morgan": "~1.9.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
