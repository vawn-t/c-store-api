# Production environment variables
NODE_ENV=production

# Database configuration
DB_USER=cstore
DB_PASSWORD=secure_production_password
DB_NAME=cstore_prod_db
DB_PORT=5432

# API configuration
API_PORT=3000

# Connection string - references the variables above
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@cstore-prod-db:5432/${DB_NAME}

# JWT secret - use a strong, unique value in production
JWT_SECRET=very_secure_production_jwt_secret

# CORS configuration
CORS_ORIGIN=https://your-frontend-domain.com
